- content_for :title do
  =t ".title"

%h1=t ".title"

= semantic_form_for @highlight, url: @url do |f|

  = f.inputs do
    - unless f.object[:image].nil?
      %img{ src: f.object.image_url, style: "width:100%" }
    = f.input :image
    = f.hidden_field :image_cache
    = f.input :title
    = f.input :description, as: "text"

  = f.actions do
    = f.action :submit

