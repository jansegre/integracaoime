%hr

= nested_form_for @resume, url: @url, html: {class: "form-horizontal"} do |f|

  .control-group
    = f.label :image, class: "control-label"
    .controls
      = f.file_field :image

  %h2=t ".professional_experiences"
  = f.fields_for :professional_experiences do |f|
    .control-group
      = f.label :company, class: "control-label"
      .controls
        = f.text_field :company
    .control-group
      = f.label :position, class: "control-label"
      .controls
        = f.text_field :position
    .control-group
      = f.label :from, class: "control-label"
      .controls
        = f.text_field :from
    .control-group
      = f.label :to, class: "control-label"
      .controls
        = f.text_field :to
    .control-group
      = f.label :description, class: "control-label"
      .controls
        = f.text_area :description, rows: 4
    .control-group
      .controls
        = f.link_to_remove t(".remove"), class: "btn btn-danger"
  = f.link_to_add t(".add"), :professional_experiences, class: "btn btn-success controls"
